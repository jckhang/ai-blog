{
  "builds": [
    {
      "src": "hugo.toml",
      "use": "@hugo-api/serverless",
      "config": {
        "buildCommand": "hugo --minify",
        "outputDirectory": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "hugo-api/*.js": {
      "maxDuration": 10
    }
  }
}
