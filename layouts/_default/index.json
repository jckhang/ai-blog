{{- $pages := site.RegularPages -}}
{{- $items := slice -}}
{{- range $pages -}}
  {{- $items = $items | append (dict
      "title" .Title
      "permalink" .Permalink
      "summary" (.Summary | plainify)
      "content" (.Content | plainify)
      "date" (.Date.Format "2006-01-02")
      "tags" .Params.tags
      "categories" .Params.categories
  ) -}}
{{- end -}}
{{- $items | jsonify -}}
